---
import BaseLayout from "../../layouts/BaseLayout.astro";

const services = [
  {
    icon: "üëî",
    title: "Cloth Ironing",
    description: "Professional ironing service for your everyday garments. Crisp finish, careful handling, and convenient pickup/delivery options.",
    availability: "Available in select areas",
    pricing: "Per piece pricing"
  }
];

const benefits = [
  {
    icon: "üìç",
    title: "Local & Convenient",
    description: "Services available in your neighborhood with flexible scheduling."
  },
  {
    icon: "‚ú®",
    title: "Quality Focused",
    description: "Attention to detail and care in every service we provide."
  },
  {
    icon: "üìû",
    title: "Simple Booking",
    description: "No complex apps or accounts. Just reach out and schedule."
  }
];
---

<BaseLayout>
  <section class="local-services">
    <div class="container">
      <!-- Header -->
      <div class="page-header">
        <span class="breadcrumb">
          <a href="/">Home</a> / <a href="/services">Services</a> / Local
        </span>
        <h1 class="page-title">Local Services</h1>
        <p class="page-subtitle">
          Quality services for your everyday needs ‚Äî available locally with 
          simple booking and reliable delivery.
        </p>
      </div>

      <!-- Services List -->
      <div class="services-section">
        <h2 class="section-title">Available Services</h2>
        <div class="services-list">
          {services.map((service) => (
            <div class="service-item">
              <div class="service-main">
                <span class="service-icon">{service.icon}</span>
                <div class="service-content">
                  <h3 class="service-title">{service.title}</h3>
                  <p class="service-description">{service.description}</p>
                  <div class="service-meta">
                    <span class="meta-tag">{service.availability}</span>
                    <span class="meta-tag">{service.pricing}</span>
                  </div>
                </div>
              </div>
            </div>
          ))}
        </div>

        <div class="coming-soon">
          <p class="coming-soon-text">
            <strong>More services coming soon.</strong> We're expanding our local offerings 
            to bring you more convenience and quality.
          </p>
        </div>
      </div>

      <!-- Benefits -->
      <div class="benefits-section">
        <h2 class="section-title">Why Choose Local Services</h2>
        <div class="benefits-grid">
          {benefits.map((benefit) => (
            <div class="benefit-item">
              <span class="benefit-icon">{benefit.icon}</span>
              <h4 class="benefit-title">{benefit.title}</h4>
              <p class="benefit-description">{benefit.description}</p>
            </div>
          ))}
        </div>
      </div>

      <!-- CTA -->
      <div class="cta-section">
        <h2 class="cta-title">Interested in Our Local Services?</h2>
        <p class="cta-subtitle">
          Contact us to check availability in your area and schedule a service.
        </p>
        <a href="/contact" class="btn btn-primary">Contact Us</a>
      </div>
    </div>
  </section>
</BaseLayout>

<style>
  .local-services {
    padding-top: 7rem;
    padding-bottom: 4rem;
  }

  .page-header {
    text-align: center;
    margin-bottom: 4rem;
  }

  .breadcrumb {
    display: inline-block;
    font-size: 0.875rem;
    color: var(--text-muted);
    margin-bottom: 1rem;
  }

  .breadcrumb a {
    color: var(--text-secondary);
    text-decoration: none;
  }

  .breadcrumb a:hover {
    color: var(--accent);
  }

  .page-title {
    font-size: clamp(2rem, 4vw, 2.75rem);
    font-weight: 700;
    margin-bottom: 1rem;
  }

  .page-subtitle {
    font-size: 1.125rem;
    color: var(--text-secondary);
    max-width: 580px;
    margin: 0 auto;
    line-height: 1.7;
  }

  .section-title {
    font-size: 1.5rem;
    font-weight: 600;
    margin-bottom: 2rem;
  }

  /* Services List */
  .services-section {
    margin-bottom: 4rem;
  }

  .services-list {
    display: flex;
    flex-direction: column;
    gap: 1rem;
  }

  .service-item {
    background: var(--card-bg);
    border: 1px solid var(--border);
    border-radius: 0.75rem;
    padding: 2rem;
    transition: box-shadow 0.2s ease;
  }

  .service-item:hover {
    box-shadow: var(--card-shadow);
  }

  .service-main {
    display: flex;
    gap: 1.5rem;
    align-items: flex-start;
  }

  .service-icon {
    font-size: 2.5rem;
    flex-shrink: 0;
  }

  .service-content {
    flex-grow: 1;
  }

  .service-title {
    font-size: 1.25rem;
    font-weight: 600;
    margin-bottom: 0.5rem;
  }

  .service-description {
    color: var(--text-secondary);
    font-size: 1rem;
    line-height: 1.6;
    margin-bottom: 1rem;
  }

  .service-meta {
    display: flex;
    flex-wrap: wrap;
    gap: 0.5rem;
  }

  .meta-tag {
    font-size: 0.8125rem;
    padding: 0.375rem 0.875rem;
    background: var(--bg-tertiary);
    border-radius: 1rem;
    color: var(--text-secondary);
  }

  .coming-soon {
    margin-top: 2rem;
    padding: 1.5rem;
    background: var(--bg-secondary);
    border-radius: 0.5rem;
    border-left: 3px solid var(--accent);
  }

  .coming-soon-text {
    color: var(--text-secondary);
    font-size: 0.9375rem;
  }

  .coming-soon-text strong {
    color: var(--text-primary);
  }

  /* Benefits */
  .benefits-section {
    margin-bottom: 4rem;
  }

  .benefits-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(240px, 1fr));
    gap: 2rem;
  }

  .benefit-item {
    text-align: center;
    padding: 1.5rem;
  }

  .benefit-icon {
    font-size: 2rem;
    display: block;
    margin-bottom: 1rem;
  }

  .benefit-title {
    font-size: 1rem;
    font-weight: 600;
    margin-bottom: 0.5rem;
  }

  .benefit-description {
    color: var(--text-secondary);
    font-size: 0.9375rem;
    line-height: 1.6;
  }

  /* CTA */
  .cta-section {
    text-align: center;
    padding: 3rem;
    background: var(--bg-secondary);
    border-radius: 1rem;
    border: 1px solid var(--border);
  }

  .cta-title {
    font-size: 1.5rem;
    font-weight: 600;
    margin-bottom: 0.5rem;
  }

  .cta-subtitle {
    color: var(--text-secondary);
    margin-bottom: 1.5rem;
  }

  @media (max-width: 640px) {
    .local-services {
      padding-top: 6rem;
    }

    .service-main {
      flex-direction: column;
      gap: 1rem;
    }

    .cta-section {
      padding: 2rem 1.5rem;
    }
  }
</style>
